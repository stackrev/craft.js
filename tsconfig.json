{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "craftjs": [
        "packages/core/src/index"
      ],
      "craftjs-layers": [
        "packages/layers/src/index"
      ],
      "craftjs/*": [
        "packages/core/src/*"
      ],
      "craftjs-utils": [
        "packages/shared/src/index"
      ]
    }
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**"
  ]
}