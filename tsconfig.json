{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
   "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "craftjs": [
        "packages/core/src/index"
      ],
      "craftjs/*": [
        "packages/core/src/*"
      ],
      "craftjs-layers": [
        "packages/layers/src/index"
      ],
      "craftjs-utils": [
        "packages/utils/src/index"
      ],
      "craftjs-utils/*": [
        "packages/utils/src/*"
      ]
    }
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/lib/**"
  ]
}